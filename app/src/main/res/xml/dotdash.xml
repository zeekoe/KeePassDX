<Keyboard 
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:horizontalGap="0px"
	android:verticalGap="0px" 
	>

	<Row
		android:keyWidth="50%"
		android:rowEdgeFlags="top"
		android:keyHeight="20%"
	>
		<Key
		    android:keyIcon="@drawable/sym_keyboard_dot"
			android:keyEdgeFlags="left"
			android:codes="0"
			/>
		<Key
			android:keyIcon="@drawable/sym_keyboard_dash"
			android:keyEdgeFlags="right"
			android:codes="1"
			/>
	</Row>

	<Row
		android:keyWidth="25%"
		android:rowEdgeFlags="bottom"
		android:keyHeight="17%"
	>
		<Key
			android:keyLabel="@string/caps_lock_off"
			android:keyEdgeFlags="left"
			android:codes="59"
			android:isSticky="true"
			/>
		<Key
			android:keyLabel=" "
			android:codes="62"
			android:keyWidth="50%"
            android:isRepeatable="false"
			/>
		<Key
			android:keyIcon="@drawable/sym_keyboard_delete"
			android:keyEdgeFlags="right"
			android:isRepeatable="true"
			android:codes="67"
		/>
	</Row>

</Keyboard>
    